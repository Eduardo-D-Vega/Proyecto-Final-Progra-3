@model PlataformaEmpleo.Models.Postulacion

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white-special">Crear nueva postulación</h1>

<h4 class="text-white-special">Postulacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="text-white-special">Fecha de postulación</label>
                <input asp-for="FechaPostulacion" class="form-control" />
                <span asp-validation-for="FechaPostulacion" class="text-danger"></span>
            </div>

            <!-- no se añade "Estado postulación" porque eso lo gestiona el reclutador-->

            <div class="form-group">
                <label class="text-white-special">Nombre del candidato</label>
                <select asp-for="IdCandidato" class ="form-control" asp-items="ViewBag.IdCandidato"></select>
            </div>
            <div class="form-group">
                <label class="text-white-special">Oferta de empleo</label>
                <select name="IdOfertaSeleccionada" class="form-control" asp-items="ViewBag.IdOferta"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-contraste" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-white-special">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
