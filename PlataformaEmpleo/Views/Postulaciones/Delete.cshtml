@model PlataformaEmpleo.Models.Postulacion

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white-special">Eliminar Postulación</h1>

<div>
    <h4 class="text-white-special">Información de la postulación</h4>
    <hr />
    <dl class="text-white-special" ="row">
        <dt class= "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPostulacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPostulacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoPostulacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoPostulacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Candidato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Candidato.NombreCompleto)
        </dd>

        <dt class="col-sm-2">
            Puesto postulado
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.OfertasPostulaciones)
            {
                <span> @item.OfertaEmpleo.Titulo</span>
                <br />
            }
        </dd>
    </dl>
    
    <div class="text-end mb-3">
        <h3 class="text-white-special h3-eliminar">¿Estás seguro de que quieres eliminar la postulación?</h3>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPostulacion" />
        <input type="submit" value="Eliminar" class="btn btn-contraste" /> |
        <a asp-action="Index" class="text-white-special">Volver a la lista</a>
    </form>
</div>
