@model PlataformaEmpleo.Models.OfertaEmpleo

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white-special">Editar Oferta Laboral</h1>
<h4 class="text-white-special">Editar información</h4>
<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOferta" />

            <div class="form-group">
                <label class="text-white-special">Titular</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Descripción del puesto</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Requisitos</label>
                <input asp-for="Requisitos" class="form-control" />
                <span asp-validation-for="Requisitos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-white-special">Reclutador</label>
                <input asp-for="Reclutador" class="form-control" />
                <span asp-validation-for="Reclutador" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Ubicación</label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Fecha de publicación</label>
                <input asp-for="FechaPublicacion" class="form-control" type="date" />
                <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Fecha de cierre</label>
                <input asp-for="FechaCierre" class="form-control" type="date" />
                <span asp-validation-for="FechaCierre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Tipo de contrato</label>
                <input asp-for="TipoContrato" class="form-control" />
                <span asp-validation-for="TipoContrato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Salario</label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-white-special">Horario</label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="text-white-special">Nombre de la empresa</label>
                <select asp-for="ReclutadorId" class="form-control" asp-items="ViewBag.ReclutadorId"></select>
                <span asp-validation-for="ReclutadorId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-contraste">Guardar</button>
        </form>

    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="text-white-special">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
