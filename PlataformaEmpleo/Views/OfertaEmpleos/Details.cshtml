@model PlataformaEmpleo.Models.OfertaEmpleo

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-white-special">Detalles de la oferta laboral</h1>

<div>
    <h4 class="text-white-special">Oferta de empleo</h4>
    <hr />
    <dl class="text-white-special" = "row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Requisitos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Requisitos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ubicacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ubicacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPublicacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPublicacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCierre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCierre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoContrato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoContrato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reclutador.NombreEmpresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reclutador.NombreEmpresa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Horario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Horario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reclutador.NombreEmpresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reclutador.NombreEmpresa)
        </dd>
    </dl>
</div>

<div>
    <h4 class="text-white-special">Candidatos</h4>

    <table class="text-white-special" ="table">
        <thead>
            <tr>
                <th>
                    NombreCompleto
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Ciudad
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Postulaciones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Postulaciones.Candidato.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Postulaciones.Candidato.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Postulaciones.Candidato.Ciudad)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdOferta" class="btn btn-contraste">Editar</a> |
    <a asp-action="Index" class="text-white-special">Volver a la lista</a>
</div>
