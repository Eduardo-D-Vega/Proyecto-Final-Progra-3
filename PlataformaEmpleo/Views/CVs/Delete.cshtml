@model PlataformaEmpleo.Models.CV

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white-special">Eliminar currículo</h1>

<div>
    <h4 class="text-white-special">Información del CV</h4>
    <hr />
    <dl class="text-white-special" ="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidato.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PerfilProfesional)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerfilProfesional)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormacionAcademica)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormacionAcademica)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExperienciaLaboral)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExperienciaLaboral)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Habilidades)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Habilidades)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idiomas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idiomas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Certificaciones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Certificaciones)
        </dd>
    </dl>
    
    <div class="text-end mb-3">
        <h3 class="text-white-special h3-eliminar">¿Estás seguro de eliminar el currículo?</h3>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCV" />
        <input type="submit" value="Eliminar" class="btn btn-contraste" /> |
        <a asp-action="Index" class="text-white-special">Volver a la lista</a>
    </form>
</div>
