<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlataformaEmpleo</title>

    <!-- bootstrap y librerias de estilo -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <!-- style.css estilo personalizado -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">

                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    PlataformaEmpleo
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="mainNav">
                    @{
                        // se obtiene el controlador y la acción actual
                        var currentController = ViewContext.RouteData.Values["controller"].ToString();
                        var currentAction = ViewContext.RouteData.Values["action"].ToString();
                    }

                    <ul class="navbar-nav mb-2 mb-lg-0 gap-2">

                        <!-- siempre se muestra "home" -->
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        <!-- solo se muestra cv y ofertas si no se esta en home ni en Admin -->
                        @if (currentController != "Home" && currentController != "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "CV" ? "active" : "")"
                                   asp-controller="CVs" asp-action="Index">CV</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Ofertas" ? "active" : "")"
                                   asp-controller="OfertaEmpleos" asp-action="Index">Ofertas</a>
                            </li>
                        }

                        <!-- las otras interfacez se muestran siempre, excepto en la vista Admin -->
                        @if (currentController != "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Candidatos" ? "active" : "")"
                                   asp-controller="Candidatos" asp-action="Index">Candidatos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Postulaciones" ? "active" : "")"
                                   asp-controller="Postulaciones" asp-action="Index">Postulaciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Reclutadores" ? "active" : "")"
                                   asp-controller="Reclutadores" asp-action="Index">Reclutadores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" ? "active" : "")"
                                   asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }
                    </ul>

                       <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4 flex-fill">
        @RenderBody()
    </main>

    <footer class="text-center py-4 bg-light border-top">
        <small class="text-muted">© 2025 PlataformaEmpleo</small>
    </footer>


    <script>
        document.addEventListener("DOMContentLoaded", () => {
            AOS.init();
            if (window.GLightbox) GLightbox();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>



