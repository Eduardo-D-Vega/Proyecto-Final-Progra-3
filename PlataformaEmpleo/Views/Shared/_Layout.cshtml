<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlataformaEmpleo</title>

    <!-- Bootstrap (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap icons (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- AOS (animaciones) CDN -->
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <!-- GLightbox (si la plantilla lo usa) -->
    <link href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" rel="stylesheet" />

    <!-- Swiper (si la plantilla lo usa) -->
    <link href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Tu CSS de plantilla (local) -->
    <link rel="stylesheet" href="~/Templates/main.css" asp-append-version="true" />

    <!-- Tu CSS adicional (pequeñas correcciones) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* algunas correcciones para que el hero muestre la imagen */
        .hero {
            width: 100%;
            min-height: 80vh;
            position: relative;
            padding: 120px 0 60px 0;
            display: flex;
            align-items: center;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        /* Footer discreto */
        footer.site-footer {
            background: #f8f9fa;
            padding: 18px 0;
        }
    </style>
</head>
<body class="body-background">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">PlataformaEmpleo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Candidatos" asp-action="Index">Candidato</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CVs" asp-action="Index">CV</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="OfertaEmpleos" asp-action="Index">Ofertas</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Postulaciones" asp-action="Index">Postulaciones</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reclutadores" asp-action="Index">Reclutador</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="OfertaPostulaciones" asp-action="Index">OfertaPostulaciones</a></li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="site-footer text-center mt-5">
        <div class="container">
            &copy; PlataformaEmpleo - 2025
        </div>
    </footer>

    <!-- Scripts: jQuery (opcional), Bootstrap bundle -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- AOS / GLightbox / Swiper (CDN) -->
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

    <!-- Inicializaciones mínimas -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (window.AOS) AOS.init();
            if (window.GLightbox) GLightbox();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

