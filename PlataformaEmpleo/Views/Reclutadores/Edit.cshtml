@model PlataformaEmpleo.Models.Reclutador

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white-special">Editar Perfil</h1>

<h4 class="text-white-special">Información del reclutador</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReclutador" />

            <div class="form-group">
                <label class="text-white-special">Nombre Empresa</label>
                <input asp-for="NombreEmpresa" class="form-control" />
                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-white-special">Correo empresarial</label>
                <input asp-for="CorreoEmpresa" class="form-control" />
                <span asp-validation-for="CorreoEmpresa" class="text-danger"></span>
            </div>
            <input type="submit" value="Guardar" class="btn btn-contraste" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-white-special">Volver a la lista</a>"
</div>

