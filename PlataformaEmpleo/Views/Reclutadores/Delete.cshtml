@model PlataformaEmpleo.Models.Reclutador

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white-special">Eliminar Perfil</h1>

<div>
    <h4 class="text-white-special">Información del reclutador</h4>
    <hr />
    <dl class="text-white-special" ="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEmpresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEmpresa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorreoEmpresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorreoEmpresa)
        </dd>
    </dl>
    
    <div class="text-end mb-3">
        <h3 class="text-white-special h3-eliminar">¿Estás seguro de que quieres eliminar el perfil?</h3>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdReclutador" />
        <input type="submit" value="Eliminar" class="btn btn-contraste" /> |
        <a asp-action="Index" class="text-white-special">Volver a la lista</a>
    </form>
</div>
