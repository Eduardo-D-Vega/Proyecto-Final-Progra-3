@model PlataformaEmpleo.Models.OfertaPostulacion

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white-special">Eliminar postulación</h1>

<div>
    <h4 class ="text-white-special">Oferta Postulacion</h4>
    <hr />
    <dl class="text-white-special" ="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Postulaciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Postulaciones.EstadoPostulacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfertaEmpleo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfertaEmpleo.Descripcion)
        </dd>
    </dl>
    
    <div class="text-end mb-3">
        <h3 class="text-white-special h3-eliminar">¿Esta seguro de eliminar la postulación?</h3>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPostulacion" />
        <input type="submit" value="Eliminar" class="btn btn-contraste" /> |
        <a asp-action="Index" class="text-white-special">Volver a la lista</a>
    </form>
</div>
