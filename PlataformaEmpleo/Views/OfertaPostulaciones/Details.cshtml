@model PlataformaEmpleo.Models.OfertaPostulacion

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-white-special">Postulación y Oferta</h1>

<div>
    <h4 class="text-white-special">Detallesd de la postulación</h4>
    <hr />
    <dl class="text-white-special" ="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Postulaciones.Candidato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postulaciones.Candidato.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfertaEmpleo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfertaEmpleo.Descripcion)
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.OfertasPostulacionesId" class="btn btn-contraste">Editar</a> |
<a asp-action="Index" class="text-white-special">Volver a la lista</a>
